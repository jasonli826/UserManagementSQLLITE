<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Modern TextBox Style -->
    <Style TargetType="TextBox">
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="Margin" Value="0,3"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="BorderBrush" Value="#2D6FD2"/>
        <Setter Property="BorderThickness" Value="1.2"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
    </Style>
    <Style TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>

    </Style>

    <!-- Modern Button Style (Taller) -->
    <Style TargetType="Button">
        <Setter Property="Height" Value="36"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Background" Value="#2D6FD2"/>
        <Setter Property="Padding" Value="10,4"/>
        <Setter Property="Margin" Value="4,0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="6" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#1A4FB0"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#144089"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- DataGrid Style -->
    <Style TargetType="DataGrid">
        <Setter Property="AlternatingRowBackground" Value="#EEF5FF"/>
        <Setter Property="RowBackground" Value="White"/>
        <Setter Property="RowHeight" Value="32"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="GridLinesVisibility" Value="None"/>
        <Setter Property="BorderBrush" Value="#2D6FD2"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Margin" Value="0,6,0,0"/>
    </Style>
    <Style x:Key="CenterHeaderStyle" TargetType="DataGridColumnHeader">
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Padding" Value="0"/>
    </Style>

    <!-- Colorful Parent Menu Buttons -->
    <Style x:Key="ParentMenuButtonStyle" TargetType="Button">
        <Setter Property="Height" Value="36"/>
        <Setter Property="Width" Value="140"/>
        <Setter Property="Margin" Value="5,0"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="#0078D7"/>
        <!-- Blue by default -->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="6" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#005A9E"/>
                            <!-- Darker blue on hover -->
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#004578"/>
                            <!-- Even darker blue on press -->
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <Style TargetType="DatePickerTextBox">
        <Setter Property="Height" Value="35"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,5,0,0"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="IsReadOnly" Value="True"/>
        <Setter Property="Padding" Value="8,0"/>
        <Setter Property="BorderBrush" Value="#D0D6E5"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="DatePickerTextBox">
                    <Border CornerRadius="6"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <TextBox x:Name="PART_TextBox"
                             Background="Transparent"
                             BorderThickness="0"
                             Padding="5"
                             VerticalContentAlignment="Center"
                             Text="{Binding Path=SelectedDate, RelativeSource={RelativeSource AncestorType=DatePicker}, StringFormat=dd MMM yyyy}" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="DatePicker">
        <Setter Property="Height" Value="50"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,5,0,0"/>
    </Style>
    <SolidColorBrush x:Key="PrimaryColor" Color="#2D6FD2"/>
    <SolidColorBrush x:Key="BorderColor" Color="#D0D6E5"/>
    <SolidColorBrush x:Key="TabBackground" Color="White"/>
    <SolidColorBrush x:Key="TabHoverBackground" Color="#EAF1FC"/>
    <SolidColorBrush x:Key="TabSelectedBackground" Color="#F3F6FB"/>
    <!-- Panel Count Tab Color -->
    <SolidColorBrush x:Key="PanelTabColor" Color="#4CAF50"/>
    <SolidColorBrush x:Key="UPHTabColor" Color="#2196F3"/>
    <SolidColorBrush x:Key="AlarmTabColor" Color="#F44336"/>

    <!-- Gray -->

    <!-- TabItem Style -->
    <Style TargetType="TabItem">
        <Setter Property="Background" Value="{StaticResource TabBackground}" />
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Padding" Value="12 6"/>
        <Setter Property="Margin" Value="0,0,-1,0"/>
        <!-- overlap fix -->
        <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
        <Setter Property="BorderThickness" Value="1"/>

        <Setter Property="HeaderTemplate">
            <Setter.Value>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{Binding RelativeSource={RelativeSource AncestorType=TabItem}, Path=Tag}" 
                  Width="18" Height="18"/>
                        <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                    </StackPanel>
                </DataTemplate>
            </Setter.Value>
        </Setter>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TabItem">
                    <Border x:Name="Border"
               Background="{TemplateBinding Background}"
               BorderBrush="{TemplateBinding BorderBrush}"
               BorderThickness="{TemplateBinding BorderThickness}"
               CornerRadius="6,6,0,0"
               Padding="{TemplateBinding Padding}">
                        <ContentPresenter ContentSource="Header" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource TabHoverBackground}"/>
                            <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource TabSelectedBackground}"/>
                            <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                            <Setter Property="Foreground" Value="{StaticResource PrimaryColor}"/>
                            <Setter TargetName="Border" Property="BorderThickness" Value="1"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="TabControl">
        <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TabControl">
                    <Grid ClipToBounds="True" SnapsToDevicePixels="True">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TabPanel 
                       x:Name="HeaderPanel"
                       Grid.Row="0"
                       Background="Transparent"
                       IsItemsHost="True"
                       Margin="5,5,5,0"
                       Panel.ZIndex="1" />

                        <!-- Content -->
                        <Border 
                       x:Name="ContentPanel"
                       Grid.Row="1"
                       Background="{TemplateBinding Background}"
                       BorderBrush="{TemplateBinding BorderBrush}"
                       BorderThickness="1"
                       CornerRadius="0 6 6 6"
                       Margin="5"
                       SnapsToDevicePixels="True">
                            <ContentPresenter 
                           x:Name="PART_SelectedContentHost"
                           Margin="10"
                           ContentSource="SelectedContent"/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="Border" x:Key="DataGridBorderStyle">
        <Setter Property="CornerRadius" Value="8"/>
    </Style>

    <Style TargetType="DataGridColumnHeader" x:Key="DataGridColumnHeaderStyle">
        <Setter Property="Foreground" Value="{StaticResource PrimaryColor}" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Background" Value="#F5F5F5"/>
        <Setter Property="BorderBrush" Value="#E0E0E0"/>
        <Setter Property="BorderThickness" Value="0,0,1,1"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="Padding" Value="8"/>
    </Style>
    <Style TargetType="DataGridCell" x:Key="DataGridCellStyle">
        <Setter Property="BorderBrush" Value="#E0E0E0"/>
        <Setter Property="BorderThickness" Value="0,0,1,1"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Background" Value="Transparent"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#F0F8FF"/>
            </Trigger>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="#D9EDF7"/>
                <Setter Property="Foreground" Value="Black"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    <!-- Title Style -->
    <Style x:Key="LogTitleStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryColor}"/>
        <Setter Property="Margin" Value="10,10,0,5"/>
    </Style>

    <!-- Log TextBox Style -->
    <Style x:Key="LogTextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="#ffffff"/>
        <Setter Property="BorderBrush" Value="#d1d8de"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontFamily" Value="Consolas"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Margin" Value="10,0,10,10"/>
        <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
        <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
    </Style>

    <Style TargetType="StackPanel" x:Key="ToolbarPanel">
        <Setter Property="Background" Value="#F7F9FA"/>
        <Setter Property="Margin" Value="5"/>
    </Style>
</ResourceDictionary>
