<UserControl x:Class="UserManagementLibray.DataAnalytics"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UserManagementLibray"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d"
             Background="#F3F6FB"
             Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Style/UserControlStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
  <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="📊 Data Analytics"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#2D6FD2"
                   Margin="0 0 0 20"/>
        <!-- Tab Control -->
        <TabControl Grid.Row="1"
                    Margin="0"
                    Padding="10">

            <!-- Panel Count Tab -->
            <TabItem Header="Panel Count" FontSize="18"
                     Tag="{StaticResource PanelTabColor}" >
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="🧩"
                                       FontFamily="Segoe MDL2 Assets"
                                       FontSize="16"
                                       Foreground="{StaticResource PanelTabColor}"
                                       Margin="0,0,6,0"/>
                            <TextBlock Text="Panel Count"/>
                        </StackPanel>
                    </DataTemplate>
                </TabItem.HeaderTemplate>

                <!-- Panel Count Content -->
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <!-- Filter Panel -->
                    <Border Background="White"
                            CornerRadius="8"
                            Padding="15"
                            Margin="0 0 0 10"
                            BorderBrush="#D0D6E5"
                            BorderThickness="1">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <!-- Start Date -->
                            <StackPanel Width="220" Margin="0 0 10 0">
                                <TextBlock Text="Start Date" FontWeight="Bold" FontSize="18"/>
                                <xctk:DateTimePicker Name="dpPanelStartDate" Format="Custom" FormatString="dd MMM yyyy HH:mm" AllowTextInput="False" FontSize="18"  Maximum="{x:Static sys:DateTime.Now}" />
                            </StackPanel>
                            <!-- End Date -->
                            <StackPanel Width="220" Margin="0 0 10 0">
                                <TextBlock Text="End Date" FontWeight="Bold"  FontSize="18"/>
                                <xctk:DateTimePicker Name="dpPanelEndDate" Format="Custom" FormatString="dd MMM yyyy HH:mm" AllowTextInput="False" FontSize="18"  Maximum="{x:Static sys:DateTime.Now}"/>
                            </StackPanel>
                            <!-- Hourly/Daily -->
                            <StackPanel Width="150" Margin="10,0,10,0">
                                <TextBlock Text="View Mode" FontWeight="Bold" Margin="0 0 0 5"  FontSize="18"/>
                                <StackPanel Orientation="Horizontal">
                                    <RadioButton Content="Hourly" GroupName="PanelViewMode" x:Name="rbPanelCountHourly"  FontSize="18"/>
                                    <RadioButton Content="Daily" GroupName="PanelViewMode" IsChecked="True" x:Name="rbPanelCountDaily" Margin="10,0,0,0"  FontSize="18"/>
                                </StackPanel>
                            </StackPanel>
                            <!-- Button -->
                            <Button Content="Get Part Count" Width="150" Height="36" VerticalAlignment="Bottom" Background="#2D6FD2" Foreground="White" Click="BtnPanelCountGetData_Click"  FontSize="18"/>
                        </StackPanel>
                    </Border>
                    <lvc:CartesianChart Grid.Row="1" Name="ChartPanelCount" Margin="0" LegendLocation="Top"  FontSize="18">
                        <lvc:CartesianChart.AxisY>
                            <lvc:Axis MinValue="0"   FontSize="18"/>
                        </lvc:CartesianChart.AxisY>
                    </lvc:CartesianChart>
                </Grid>
            </TabItem>

            <!-- UPH Tab -->
            <TabItem Header="UPH" FontSize="18"
                     Tag="{StaticResource UPHTabColor}">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="📈" FontSize="14" Margin="0,0,6,0" FontFamily="Segoe MDL2 Assets"  Foreground="{StaticResource UPHTabColor}"/>
                              <TextBlock Text="UPH"/>
                        </StackPanel>
                    </DataTemplate>
                </TabItem.HeaderTemplate>

                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <!-- Filters -->
                    <Border Background="White"
                            CornerRadius="8"
                            Padding="15"
                            Margin="0 0 0 10"
                            BorderBrush="#D0D6E5"
                            BorderThickness="1">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <StackPanel Width="220" Margin="0 0 10 0">
                                <TextBlock Text="Start Date" FontWeight="Bold"/>
                                <xctk:DateTimePicker Name="dpUPHStartDate" Format="Custom" FormatString="dd MMM yyyy HH:mm" AllowTextInput="False"  FontSize="18" Maximum="{x:Static sys:DateTime.Now}"/>
                            </StackPanel>
                            <StackPanel Width="220" Margin="0 0 10 0">
                                <TextBlock Text="End Date" FontWeight="Bold"/>
                                <xctk:DateTimePicker Name="dpUPHEndDate" Format="Custom" FormatString="dd MMM yyyy HH:mm" AllowTextInput="False"  FontSize="18" Maximum="{x:Static sys:DateTime.Now}"/>
                            </StackPanel>
                            <StackPanel Width="150" Margin="10,0,10,0">
                                <TextBlock Text="View Mode" FontWeight="Bold" Margin="0 0 0 5"  FontSize="18"/>
                                <StackPanel Orientation="Horizontal">
                                    <RadioButton Content="Hourly" GroupName="UPHViewMode" IsChecked="True" x:Name="rbUPHHourly" FontSize="18"/>
                                    <RadioButton Content="Daily" GroupName="UPHViewMode" x:Name="rbUPHDaily" Margin="10,0,0,0" FontSize="18"/>
                                </StackPanel>
                            </StackPanel>
                            <Button Content="Get UPH Count" Width="150" Height="36" Background="#28A745" Foreground="White" Click="BtnUPHGetData_Click"  FontSize="18"/>
                        </StackPanel>
                    </Border>
                    <lvc:CartesianChart Grid.Row="1" Name="ChartUPH" Margin="0" LegendLocation="Top">
                        <lvc:CartesianChart.AxisY>
                            <lvc:Axis MinValue="0" />
                        </lvc:CartesianChart.AxisY>
                    </lvc:CartesianChart>
                </Grid>
            </TabItem>

            <!-- Alarm Tab -->
            <TabItem Header="Alarm" FontSize="18"
                     Tag="{StaticResource AlarmTabColor}">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text=""
                                       FontFamily="Segoe MDL2 Assets"
                                       FontSize="16"
                                       Foreground="{StaticResource AlarmTabColor}"
                                       Margin="0,0,6,0"/>
                            <TextBlock Text="Alarm"/>
                        </StackPanel>
                    </DataTemplate>
                </TabItem.HeaderTemplate>

                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <!-- Filters -->
                    <Border Background="White"
                            CornerRadius="8"
                            Padding="15"
                            Margin="0 0 0 10"
                            BorderBrush="#D0D6E5"
                            BorderThickness="1">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <StackPanel Width="220" Margin="0 0 10 0">
                                <TextBlock Text="Start Date" FontWeight="Bold" FontSize="18"/>
                                <xctk:DateTimePicker Name="dpAlarmStartDate" Format="Custom" FormatString="dd MMM yyyy HH:mm" AllowTextInput="False" FontSize="18" Maximum="{x:Static sys:DateTime.Now}"/>
                            </StackPanel>
                            <StackPanel Width="220" Margin="0 0 10 0">
                                <TextBlock Text="End Date" FontWeight="Bold" FontSize="18"/>
                                <xctk:DateTimePicker Name="dpAlarmEndDate" Format="Custom" FormatString="dd MMM yyyy HH:mm" AllowTextInput="False" FontSize="18" Maximum="{x:Static sys:DateTime.Now}"/>
                            </StackPanel>
                            <StackPanel Width="150" Margin="10,0,10,0">
                                <TextBlock Text="View Mode" FontWeight="Bold" Margin="0 0 0 5" FontSize="18"/>
                                <StackPanel Orientation="Horizontal">
                                    <RadioButton Content="Hourly" GroupName="AlarmViewMode" x:Name="rbAlarmHourly" FontSize="18"/>
                                    <RadioButton Content="Daily" GroupName="AlarmViewMode" IsChecked="True" x:Name="rbAlarmDaily" Margin="10,0,0,0" FontSize="18"/>
                                </StackPanel>
                            </StackPanel>
                            <Button Content="Get Alarm Count" Width="150" Height="36" Background="#DC3545" Foreground="White" Click="BtnAlarmGetData_Click" FontSize="18"/>
                        </StackPanel>
                    </Border>
                    <lvc:CartesianChart Grid.Row="1" Name="ChartAlarm" Margin="0" LegendLocation="Top">
                        <lvc:CartesianChart.AxisY>
                            <lvc:Axis MinValue="0" />
                        </lvc:CartesianChart.AxisY>
                    </lvc:CartesianChart>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</UserControl>
