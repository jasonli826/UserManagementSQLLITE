<UserControl x:Class="UserManagementLibray.AuditLog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:helpers="clr-namespace:UserManagementLibray.Helpers"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             Background="#F3F6FB"
             Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Style/UserControlStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="📜 Audit Log"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="{StaticResource PrimaryColor}"
                   Margin="0 0 0 20"/>

        <!-- Filters -->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="10"
                Padding="15"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="1"
                Margin="0 0 0 15">
            <StackPanel Orientation="Horizontal"  VerticalAlignment="Center">

                <!-- Date Filter -->
                <StackPanel Width="180">
                    <TextBlock Text="Select Date" VerticalAlignment="Center" Foreground="{StaticResource PrimaryColor}" FontWeight="Bold"/>
                    <DatePicker x:Name="dpLogDate" SelectedDateFormat="Short" SelectedDateChanged="DpLogDate_SelectedDateChanged" Loaded="DpLogDate_Loaded" DisplayDateEnd="{x:Static sys:DateTime.Today}"/>
                </StackPanel>

                <!-- Keyword Filter -->
                <StackPanel  Margin="30,0,0,0">
                    <TextBlock Text="Keyword" Foreground="{StaticResource PrimaryColor}" FontWeight="Bold"/>
                    <TextBox x:Name="txtKeyword" Height="52" VerticalAlignment="Top" HorizontalAlignment="Left" Width="450" TextWrapping="Wrap" KeyDown="txtKeyword_Keydown" />
                </StackPanel>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="20,0,0,0">
                    <Button Content="Search"
                            Width="100"
                            Height="36"
                            Click="BtnSearch_Click"/>
                    <Button Content="Clear"
                            Width="100"
                            Height="36"
                            Click="BtnClear_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
        <DataGrid x:Name="AuditLogDataGrid" Grid.Row="2" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True" FontSize="16"
                  RowBackground="White" AlternatingRowBackground="#F9FBFF" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" GridLinesVisibility="None"
                  RowHeight="36" HeadersVisibility="Column" Margin="0" Padding="5" ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}" CellStyle="{StaticResource DataGridCellStyle}">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Audit Date"
                                    Binding="{Binding AuditDate, StringFormat=dd MMM yyyy HH:mm:ss}"
                                    Width="180"/>
                <DataGridTextColumn Header="User Id"
                                    Binding="{Binding UserName}"
                                    Width="150"/>
                <DataGridTextColumn Header="Audit Detail"
                                    Binding="{Binding Detail}"
                                    Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
