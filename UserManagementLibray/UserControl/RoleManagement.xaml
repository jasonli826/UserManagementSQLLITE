<UserControl x:Class="UserManagementlibrary.RoleManagement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F0F2F5" >

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Style/UserControlStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Inputs -->
            <RowDefinition Height="Auto"/>
            <!-- Description -->
            <RowDefinition Height="Auto"/>
            <!-- Save/Clear -->
            <RowDefinition Height="Auto"/>
            <!-- Active/Inactive -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="🛡 Role Management"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#2D6FD2"
                   Margin="0,0,0,18"/>

        <!-- Role Name -->
        <Grid Grid.Row="1" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Role Name:" Grid.Column="0" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="16"/>
            <TextBox x:Name="txtRoleName" Grid.Column="1" FontSize="16"/>
        </Grid>

        <!-- Role Description -->
        <Grid Grid.Row="2" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Role Description:" Grid.Column="0" VerticalAlignment="Top" FontWeight="SemiBold" FontSize="16"/>
            <TextBox x:Name="txtRoleDescription" Grid.Column="1" Height="60" TextWrapping="Wrap" FontSize="16"/>
        </Grid>

        <!-- Save / Clear -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,12">
            <Button Content="Save" Width="110" Click="BtnSave_Click" x:Name="BtnSave" FontSize="16"/>
            <Button Content="Clear" Width="110" Click="BtnClear_Click" FontSize="16"/>
            <Button Content="Return" Width="110" Click="BtnReturn_Click" FontSize="16"/>
            <Button Content="Role Priority Sequence" Width="180" Click="BtnRolePrioritySequence_Click" FontSize="16"/>
        </StackPanel>

        <!-- Active / Inactive -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,12">
            <Button Content="Active" Width="110" Background="#28A745" Click="BtnActive_Click" FontSize="16"/>
            <Button Content="Inactive" Width="110" Background="#DC3545" Click="BtnInactive_Click" FontSize="16"/>
        </StackPanel>

        <!-- DataGrid -->
        <DataGrid x:Name="RoleDataGrid" Grid.Row="5" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" FontSize="16" ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}" CellStyle="{StaticResource DataGridCellStyle}">
            <DataGrid.Columns>
                <!-- Checkbox Column -->
                <DataGridTemplateColumn Width="40" HeaderStyle="{StaticResource CenterHeaderStyle}">
                    <DataGridTemplateColumn.Header>
                        <CheckBox x:Name="chkSelectAll" HorizontalAlignment="Center" VerticalAlignment="Center" Click="ChkSelectAll_Click"/>
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" HorizontalAlignment="Center" VerticalAlignment="Center" Click="RowCheckBox_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Edit Column -->
                <DataGridTemplateColumn Header="Edit" Width="50">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Click="EditButton_Click" Padding="0" BorderThickness="0" Background="Transparent">
                                <Image Source="../Image/Edit.png" Width="20" Height="20"/>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Role Info -->
                <DataGridTextColumn Header="Role Name" Binding="{Binding Role_Name}" Width="*"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="2*"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="80"/>
                <DataGridTextColumn Header="Created By" Binding="{Binding Created_by}"/>
                <DataGridTextColumn Header="Created Date" Binding="{Binding Created_Date, StringFormat=dd MMM yyyy HH:mm:ss}"/>
                <DataGridTextColumn Header="Updated By" Binding="{Binding Updated_by}"/>
                <DataGridTextColumn Header="Updated Date" Binding="{Binding Updated_Date, StringFormat=dd MMM yyyy HH:mm:ss}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
