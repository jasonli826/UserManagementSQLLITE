<UserControl x:Class="UserManagementlibrary.DomainUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F0F2F5">

    <UserControl.Resources>
        <!-- Modern TextBox Style -->
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="0,3"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#2D6FD2"/>
            <Setter Property="BorderThickness" Value="1.2"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        </Style>

        <!-- Modern Button Style (Taller) -->
        <Style TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#2D6FD2"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="6" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1A4FB0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#144089"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGrid Style -->
        <Style TargetType="DataGrid">
            <Setter Property="AlternatingRowBackground" Value="#EEF5FF"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="RowHeight" Value="32"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="BorderBrush" Value="#2D6FD2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
        </Style>
        <Style x:Key="CenterHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="🌐 Domain Management"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#2D6FD2"
                   Margin="0,0,0,18"/>

        <!-- Input Fields Row 1 -->
        <Grid Grid.Row="1" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="200"/>
                <!-- Domain wider -->
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="120"/>
                <!-- Smaller CN -->
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="120"/>
                <!-- Smaller DC2 -->
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="120"/>
                <!-- Smaller DC3 -->
            </Grid.ColumnDefinitions>

            <TextBlock Text="Domain:" Grid.Column="0" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="16"/>
            <TextBox x:Name="txtDomainName" Grid.Column="1" FontSize="16"/>

            <TextBlock Text="CN:" Grid.Column="2" VerticalAlignment="Center" FontWeight="SemiBold" Margin="10,0,0,0" FontSize="16"/>
            <TextBox x:Name="txtCN" Grid.Column="3" FontSize="16"/>

            <TextBlock Text="DC2:" Grid.Column="4" VerticalAlignment="Center" FontWeight="SemiBold" Margin="10,0,0,0" FontSize="16"/>
            <TextBox x:Name="txtDC2" Grid.Column="5"/>

            <TextBlock Text="DC3:" Grid.Column="6" VerticalAlignment="Center" FontWeight="SemiBold" Margin="10,0,0,0" FontSize="16"/>
            <TextBox x:Name="txtDC3" Grid.Column="7" FontSize="16"/>
        </Grid>

        <Grid Grid.Row="2" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="450"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Domain Name:" Grid.Column="0" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="16"/>
            <TextBox x:Name="txtDomainNameRow2" Grid.Column="1" FontSize="16"/>
        </Grid>
        <Grid Grid.Row="3" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="450"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Description:" Grid.Column="0" 
               VerticalAlignment="Center" 
               FontWeight="SemiBold" 
               FontSize="16"/>

            <TextBox x:Name="txtDescription"
             Grid.Column="1"
             Height="60"
             FontSize="16"
             TextWrapping="Wrap"
             HorizontalAlignment="Left"
             VerticalAlignment="Top"
             VerticalContentAlignment="Top" Width="450"/>
            <!-- 🔑 Align text to top -->
        </Grid>


        <!-- Clear / Save Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10,0,0,12">
            <Button Content="Clear" Width="110" Click="BtnClear_Click" FontSize="16"/>
            <Button Content="Save" Width="110" Click="BtnSave_Click" x:Name="btnSave" FontSize="16"/>
        </StackPanel>

        <!-- Active / Inactive Buttons -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,12">
            <Button Content="Active" Width="110" Background="#28A745" Click="BtnActive_Click" FontSize="16"/>
            <Button Content="Inactive" Width="110" Background="#DC3545" Click="BtnInactive_Click" FontSize="16"/>
        </StackPanel>
        <!-- DataGrid -->
        <DataGrid x:Name="DomainDataGrid" Grid.Row="6" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" FontSize="16">
            <DataGrid.Columns>
                <!-- Checkbox Column -->
                <DataGridTemplateColumn Width="40" HeaderStyle="{StaticResource CenterHeaderStyle}">
                    <DataGridTemplateColumn.Header>
                        <CheckBox x:Name="chkSelectAll"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Click="ChkSelectAll_Click"/>
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}"  Click="RowCheckBox_Click"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Edit Column -->
                <DataGridTemplateColumn Header="Edit" Width="50">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Click="EditButton_Click"
                            Padding="0"
                            BorderThickness="0"
                            Background="Transparent">
                                <Image Source="../Image/Edit.png" Width="20" Height="20"/>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Domain" Binding="{Binding DomainName}" Width="*"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="2*"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="80"/>
                <DataGridTextColumn Header="Created By" Binding="{Binding Created_by}"/>
                <DataGridTextColumn Header="Created Date" Binding="{Binding Created_Date, StringFormat=dd MMM yyyy HH:mm:ss}"/>
                <DataGridTextColumn Header="Updated By" Binding="{Binding Updated_by}"/>
                <DataGridTextColumn Header="Updated Date" Binding="{Binding Updated_Date, StringFormat=dd MMM yyyy HH:mm:ss}"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>
