<UserControl x:Class="UserManagementlibrary.RoleAdministration"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="root"
             Background="White" Unloaded="UserControl_Unloaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Style/UserControlStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="🛡 Role Administration"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="#2D6FD2"
                   Margin="0,0,0,8"/>

        <!-- Role Form -->
        <Grid Grid.Row="1" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="650"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Role:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" FontSize="18"/>
            <ComboBox x:Name="cmbRole" Grid.Row="0" Grid.Column="1" DisplayMemberPath="Role_Name" SelectedValuePath="RoleID"
                      Height="32" Margin="0,0,5,5" FontSize="18"/>

            <TextBlock Text="Role Description:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" FontSize="18"/>
            <TextBox x:Name="txtRoleDescription" Grid.Row="1" Grid.Column="1" Height="70" TextWrapping="Wrap" AcceptsReturn="True" VerticalContentAlignment="Top" HorizontalContentAlignment="Left" Margin="0,0,5,0" FontSize="14"/>
            <Button Grid.Row="0" Grid.RowSpan="2" Grid.Column="2"
                    Content="Create/Edit Role"
                    Width="140" Height="40" FontSize="18"
                    Margin="5,0,0,0"
                    Click="CreateEditRole_Click"/>
        </Grid>

        <!-- Parent Menu Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,8" 
                    x:Name="ParentMenuButtonsPanel" HorizontalAlignment="Left">
        </StackPanel>

        <!-- SubMenu DataGrid with Save -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="550"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <DataGrid x:Name="SubMenuDataGrid"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      Margin="0,0,5,0"
                      GridLinesVisibility="All"
                      HeadersVisibility="Column"
                      SelectionMode="Extended"
                      SelectionUnit="FullRow" FontSize="20">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Width="40" HeaderStyle="{StaticResource CenterHeaderStyle}">
                        <DataGridTemplateColumn.Header>
                            <CheckBox x:Name="chkSelectAll"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Click="chkSelectAll_Click"/>
                        </DataGridTemplateColumn.Header>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Click="SubMenuCheckBox_Click"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn x:Name="colChildMenu" Width="*">
                        <DataGridTemplateColumn.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding CurrentSubMenuHeader, ElementName=root}" FontWeight="SemiBold"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.HeaderTemplate>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Child_Menu}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <Button Content="Save" Grid.Column="1" Width="110" Height="50" FontSize="22" 
                    VerticalAlignment="Top" Click="SaveSubMenu_Click"/>
        </Grid>
    </Grid>
</UserControl>
