<Window x:Class="UserManagementOnSQLLite.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Main Window"
        WindowState="Maximized"
        Height="650" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F0F2F5">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Style\Themes.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <DockPanel>
        <Menu DockPanel.Dock="Top" Style="{StaticResource MainMenuStyle}">
            <MenuItem Header="Home" Style="{StaticResource ParentMenuItemStyle}" Click="HomeMenu_Click"/>
            <MenuItem Header="User Management" Style="{StaticResource ParentMenuItemStyle}">
                <MenuItem Header="User Creation" Style="{StaticResource SubMenuItemStyle}" Click="MenuUserManagement_Click"/>
                <MenuItem Header="Role Administration" Style="{StaticResource SubMenuItemStyle}" Click="MenuUserRole_Click"/>
                <MenuItem Header="Domain" Style="{StaticResource SubMenuItemStyle}" Click="MenuDomain_Click"/>
                <MenuItem Header="Change Password" Style="{StaticResource SubMenuItemStyle}" Click="MenuChangePassword_Click"/>
            </MenuItem>
            <MenuItem Header="Data Analytics" Style="{StaticResource ParentMenuItemStyle}" Click="MenuDataAnalytics_Click"/>
            <MenuItem Header="Log" Style="{StaticResource ParentMenuItemStyle}" Click="MenuLog_Click" Visibility="Collapsed"/>
            <MenuItem Header="Alarm" Style="{StaticResource ParentMenuItemStyle}" Click="MenuAlarm_Click"/>
            <MenuItem Header="Audit Log" Style="{StaticResource ParentMenuItemStyle}" Click="MenuAuditLog_Click"/>
            <MenuItem Header="Logout" Style="{StaticResource ParentMenuItemStyle}" Click="MenuLogout_Click"/>
        </Menu>


        <ContentControl x:Name="MainContent">
            <!-- Default Image -->
            <Grid Background="White">
                <Image Source="Image/welcome.png" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </ContentControl>
    </DockPanel>
</Window>
