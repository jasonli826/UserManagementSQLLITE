<Window x:Class="CreateSQLLiteDB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SQLite Database Manager" Height="400" Width="550"
        Background="#f0f4f8" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Style\Themes.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Database Name -->
            <RowDefinition Height="Auto"/>
            <!-- Folder Path -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
            <RowDefinition Height="*"/>
            <!-- Spacer -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="SQLite Database Manager" FontSize="24" FontWeight="Bold" 
                   Foreground="#2D6FD2" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Database Name -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <TextBox x:Name="txtDatabaseName" Style="{StaticResource TextBoxStyle}" 
                     TextChanged="txtDatabaseName_TextChanged"/>
            <TextBlock x:Name="Watermark" Text="Enter Database Name" Foreground="Gray" 
                       Margin="10,0,0,0" VerticalAlignment="Center" IsHitTestVisible="False"/>
        </Grid>

        <!-- Folder Path + Browse Button -->
        <DockPanel Grid.Row="2" Margin="0,0,0,10">
            <TextBox x:Name="txtFolderPath" Style="{StaticResource TextBoxStyle}" 
                     VerticalAlignment="Center" DockPanel.Dock="Left" 
                     Width="350" />
            <Button Content="Browse..." Style="{StaticResource ColorfulButton}" 
                    Background="#9C27B0" MinWidth="100" 
                    Click="BrowseFolder_Click"/>
        </DockPanel>

        <!-- Action Buttons -->
        <UniformGrid Grid.Row="3" Columns="3" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Style="{StaticResource ColorfulButton}" Content="Create Database" Click="CreateDatabase_Click" Height="40" MinWidth="120"/>
            <Button Style="{StaticResource ColorfulButton}" Content="Create Table" Background="#FF9800" Click="CreateTable_Click" Height="40" MinWidth="120"/>
            <Button Style="{StaticResource ColorfulButton}" Content="Insert Default Data" Background="#2196F3" Click="InsertDefaultData_Click" Height="40" MinWidth="150" RenderTransformOrigin="0.5,0.731"/>
        </UniformGrid>
    </Grid>
</Window>
